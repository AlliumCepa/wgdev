severity    = 1
theme       = core || strictersubs || pulp || more

[-ClassHierarchies::ProhibitExplicitISA]
[-Editor::RequireEmacsFileVariables]
[-ErrorHandling::RequireUseOfExceptions]
[-Miscellanea::RequireRcsKeywords]
[-Subroutines::ProhibitCallsToUnexportedSubs]
[-Subroutines::RequireArgUnpacking]
[-ValuesAndExpressions::ProhibitConstantPragma]

[CodeLayout::RequireTidyCode]
perltidyrc = .perltidyrc

[Documentation::PodSpelling]
stop_words = Knop WGDev wgd subcommand subcommands namespace config WebGUI WebGUI's DSN mysql changelog webgui SQL sql prefered Prepending dir mysqldump database's API delcache cleantags runwf dev reindex workflows stdout wgdevcfg YAML util

[Documentation::RequirePodSections]
lib_sections = NAME | SYNOPSIS | DESCRIPTION | AUTHOR | LICENSE

[InputOutput::RequireCheckedSyscalls]
functions = opendir read readline readdir closedir

[RegularExpressions::RequireExtendedFormatting]
minimum_regex_length_to_complain_about = 5

[TestingAndDebugging::ProhibitNoWarnings]
allow_with_category_restriction = 1

[ValuesAndExpressions::ProhibitMagicNumbers]
allowed_values = -1 0 1 2 24 60 365 777 7777

[Variables::ProhibitPackageVars]
packages = File::Find Data::Dumper Config

[Variables::ProhibitPunctuationVars]
allow = $@ $/ $|

